<form method="post" action="{{ path('offre_delete', {'id': offre.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cet Offre?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
    <br/><button class="btn btn-danger">Delete</button>
</form>
