{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
<br/>
<br/>
<br/>
<br/>

<div class="container">
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ offre.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ offre.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ offre.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ offre.createdAt ? offre.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('offre_index') }}">Liste des offres</a>

    <a class="btn btn-info" href="{{ path('offre_edit', {'id': offre.id}) }}">Editer</a>

    {{ include('offre/_delete_form.html.twig') }}
</div><br/><br/>

{% endblock %}
