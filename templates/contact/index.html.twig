{% extends 'base.html.twig' %}

{% block title %}Page De Contact{% endblock title %}

{% block body %}
<br/>
<br/>
<br/>
<br/>
<br/>

    <!-- container -->
	<div class="container">

		<ol class="breadcrumb">
			<li><a href="{{ path('home') }}">Home</a></li>
			<li class="active">/Contact</li>&nbsp;&nbsp;
			{% include "flash_messages.html.twig" %}
		</ol>

		<div class="row">
			
			<!-- Article main content -->
			<article class="col-sm-9 maincontent">
				<header class="page-header">
					<h1 class="page-title">Contact us</h1>
				</header>
				
				<p>
                    
					We’d love to hear from you. Interested in working together? Fill out the form below with some info about your project and I will get back to you as soon as I can. Please allow a couple days for me to respond.
				</p>
				<br>
                    {{ form_start(our_form) }}
					
						<div class="row">
							<div class="col-sm-4">
                                {{ form_row(our_form.name) }}
							</div>
							<div class="col-sm-4">
								{{ form_row(our_form.email) }}
							</div>
							<div class="col-sm-4">
								{{ form_row(our_form.dateOfBirth) }}
							</div>
						</div>
						<br>
						<div class="row">
							<div class="col-sm-12">
								
                                {{ form_row(our_form.message) }}
							</div>
						</div>
						<br>
						<div class="row">
							<div class="col-sm-6">
								<label class="checkbox"><input type="checkbox"> Sign up for newsletter</label>
							</div>
							<div class="col-sm-6 text-right">
								<input class="btn btn-primary" type="submit" value="Send message" />
							</div>
						</div>
					
                    {{ form_end(our_form) }}<br/><br/>

			</article>
			<!-- /Article -->
			
			<!-- Sidebar -->
			<aside class="col-sm-3 sidebar sidebar-right">

				<div class="widget">
					<h4>Address</h4>
					<address>
						2020 Faculté de, Jendouba, 8100, TUNISIE
					</address>
					<h4>Phone:</h4>
					<address>
						(+216) 56-369-119
					</address>
				</div>

			</aside>
			<!-- /Sidebar -->

		</div>
	</div>	<!-- /container -->

{% endblock %}

