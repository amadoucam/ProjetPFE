{% extends 'base.html.twig' %}

{% block title %} Offre {% endblock %}

{% block body %}
<br/>
<br/>
<br/>
<br/>
<br/>
<div class="container">
    <article>
    {% include "flash_messages.html.twig" %}
        <h2>{{ offres.title }}</h2>
        <div class="metadata">Publier le <i class="fa fa-calendar"></i>{{ offres.createdAt | date('d/m/Y') }} à {{ offres.createdAt | date('H:i') }} dans la catégorie {{ offres.categorie.title }} </div> {#politique#}
        <div class="content">
            <img src="{{ offres.image }}" alt=""><br/>
            {{ offres.content | raw }}

        </div>
    </article>
    <br/> 
    {% if offres.recruteur %}
        <a class="btn btn-info" href="{{ path('offres_edit', {'id': offres.id}) }}">Modifier Votre Offre</a>
     {#   <a class="btn btn-danger" href="{{ path('offre_delete', {'id': offres.id}) }}">Supprimer Votre Offre</a> #}
    {% endif %}

    {% if is_granted('ROLE_USER') %}  
        <a class="btn btn-info" href="{{ path('offres_annonce_postulation', {'user': app.user.id, 'offres': offres.id}) }}" id="contactButton">Postuler pour L'Offre</a> <br/>      
    {% endif %}  
    
</div><br/><br/>

{% endblock %}