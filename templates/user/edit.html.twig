{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

<div class = "container">
    {% if app.user %} 
<div class="page">
<br>
<br>
        <h1 align = "center">Modifier vos informations</h1>
        <br>

        {{ form_start(form)}}
<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.nom,{'label':'Nom ','attr':{'placeholder':'Nom'}}) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.prenom,{'label':'Prenom ','attr':{'placeholder':'Prenom'}}) }} {#,'class': 'tst'#}
    </div>
</div>
        <div class="row">
    <div class="col-sm-6">
        {{form_row(form.email,{'label':'Email ','attr':{'placeholder':'Email'}})}}
    </div>
    <div class="col-sm-6">
        {{form_row(form.username,{'label':'Username ','attr':{'placeholder':'Username'}})}}
    </div>
        </div>
        
    <div class="col">
        {{form_row(form.datenaissance,{'label':'Date de naissance '})}}
    </div>
    <div class="col">
        {{form_row(form.avatar,{'label':'Mise à jour de votre Image'})}}
    </div>
    <div class="col">
        {{form_row(form.cv,{'label':'Mise à jour de votre Cv'})}}
    </div>

    <div class="row">
    <div class="col-sm-6">
        {{form_row(form.nationalite,{'label':'Nationalite','attr':{'placeholder':'Nationalite'}})}}
    </div>
    <div class="col-sm-6">
        {{form_row(form.postal_code,{'label':'Code postal','attr':{'placeholder':'exple: 1000'}})}}
    </div>
    </div>
        <div class="row">
    <div class="col-sm-6">
        {{form_row(form.adresse,{'label':'Adresse','attr':{'placeholder':'Adresse'}})}}
    </div>
    <div class="col-sm-6">
        {{form_row(form.tel,{'label':'N° Tel','attr':{'placeholder':'tel'}})}}
    </div>
       </div>
       <div class="row">
    <div class="col-sm-6">
        {{form_row(form.level,{'label':'Niveau','attr':{'placeholder':'Adresse'}})}}
    </div>
    <div class="col-sm-6">
        {{form_row(form.civility,{'label':'Etat civil','attr':{'placeholder':'tel'}})}}
    </div>
    

       </div>

        <button class="btn btn-lg btn-info btn-block" type="submit">Update</button><br/><br/>  
    
        {{ form_end(form)}}
    {{ include('user/_delete_form.html.twig') }}

</div>
    {% else %} 
        <div class="alert alert-danger" role="alert">
            Vous besoin de connecter avant !!
        </div>     
    {% endif %}  
</div> <br/>

{% endblock %}